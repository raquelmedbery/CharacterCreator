<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size160dp"
    android:orientation="vertical"
    android:background="@drawable/dungeonanddragons"
    android:padding="@dimen/padding20dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:src="@drawable/druid"
        android:layout_width="75dp"
        android:layout_height="75dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/character_creator"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginTop="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_your_own_character"
        android:textColor="@color/white"/>

</LinearLayout>